SELECT        dbo.LG_125_BOMASTER.LOGICALREF AS BOMASTER_LR, dbo.LG_125_BOMLINE.LOGICALREF AS BOMLINE_LR, dbo.LG_125_ITEMS.LOGICALREF AS ITEMS_LR, dbo.LG_125_OPERTION.LOGICALREF AS OPERTION_LR, 
                         dbo.LG_125_ITEMS.CODE AS [MALZEME KODU], dbo.LG_125_ITEMS.NAME AS [MALZEME ADI], dbo.LG_125_ITEMS.SPECODE3 AS [ÖZEL KOD 3], dbo.LG_125_SPECODES.DEFINITION_ AS [ÖZEL KOD 3 AÇIKLAMA], 
                         dbo.LG_125_BOMASTER.CODE AS [REÇETE KODU], dbo.LG_125_BOMASTER.NAME AS [KALIP KODU], dbo.LG_125_OPERTION.NAME AS [KALIP ADI], dbo.LG_125_OPRTREQ.BATCHQUANTITY AS [GÖZ SAYISI], 
                         dbo.LG_INTTOTIME(dbo.LG_125_OPRTREQ.RUNTIME) AS [ÇEVRİM SÜRESİ], LG_125_ITEMS_1.CODE AS [HAMMADDE KODU], LG_125_ITEMS_1.NAME AS [HAMMADDE ADI], LG_125_ITEMS_1.SPECODE AS [HAMMADDE TÜRÜ], 
                         dbo.LG_125_BOMLINE.AMOUNT AS MİKTAR, dbo.LG_125_UNITSETF.NAME AS BİRİM, dbo.FCD_KOLI_PALET_ICERIKLERI.[Net Ağırlık] AS [ÜRÜN AĞIRLIK], dbo.FCD_KOLIPALETFULL.[Net Ağırlık] AS [HAMMADDE AĞIRLIK], 
                         FCD_KOLI_PALET_ICERIKLERI_3.Adet AS [POŞET İÇİ MİKTAR], FCD_KOLI_PALET_ICERIKLERI_1.Adet AS [KOLİ İÇİ MİKTAR], FCD_KOLI_PALET_ICERIKLERI_2.Adet AS [PALET İÇİ MİKTAR], 
                         dbo.LG_125_ITEMS.SPECODE5 AS [BOYA ORANI], dbo.LG_125_BOMLINE.FORMULA, LG_XT1001_125_1.KATKI_ORANI, LG_XT1001_125_1.BOYA_ORANI, LG_XT1001_125_1.KATKI_KODU, 
                         LG_XT1001_125_1.BOYA_KODU
FROM            dbo.LG_125_OPERTION LEFT OUTER JOIN
                         dbo.LG_125_OPRTREQ ON dbo.LG_125_OPERTION.LOGICALREF = dbo.LG_125_OPRTREQ.OPERATIONREF LEFT OUTER JOIN
                         dbo.LG_125_BOMASTER ON dbo.LG_125_OPERTION.CODE = dbo.LG_125_BOMASTER.NAME RIGHT OUTER JOIN
                         dbo.LG_125_ITEMS INNER JOIN
                         dbo.FCD_KOLI_PALET_ICERIKLERI AS FCD_KOLI_PALET_ICERIKLERI_3 ON dbo.LG_125_ITEMS.CODE = FCD_KOLI_PALET_ICERIKLERI_3.[Ürün Kodu] LEFT OUTER JOIN
                         dbo.LG_XT1001_125 AS LG_XT1001_125_1 ON dbo.LG_125_ITEMS.LOGICALREF = LG_XT1001_125_1.PARLOGREF LEFT OUTER JOIN
                         dbo.FCD_KOLI_PALET_ICERIKLERI ON dbo.LG_125_ITEMS.CODE = dbo.FCD_KOLI_PALET_ICERIKLERI.[Ürün Kodu] LEFT OUTER JOIN
                         dbo.FCD_KOLI_PALET_ICERIKLERI AS FCD_KOLI_PALET_ICERIKLERI_1 ON dbo.LG_125_ITEMS.CODE = FCD_KOLI_PALET_ICERIKLERI_1.[Ürün Kodu] LEFT OUTER JOIN
                         dbo.FCD_KOLI_PALET_ICERIKLERI AS FCD_KOLI_PALET_ICERIKLERI_2 ON dbo.LG_125_ITEMS.CODE = FCD_KOLI_PALET_ICERIKLERI_2.[Ürün Kodu] LEFT OUTER JOIN
                         dbo.LG_125_SPECODES ON dbo.LG_125_ITEMS.SPECODE3 = dbo.LG_125_SPECODES.SPECODE ON dbo.LG_125_BOMASTER.MAINPRODREF = dbo.LG_125_ITEMS.LOGICALREF RIGHT OUTER JOIN
                         dbo.LG_125_BOMLINE ON dbo.LG_125_BOMASTER.LOGICALREF = dbo.LG_125_BOMLINE.BOMMASTERREF RIGHT OUTER JOIN
                         dbo.LG_125_ITEMS AS LG_125_ITEMS_1 INNER JOIN
                         dbo.FCD_KOLIPALETFULL ON LG_125_ITEMS_1.CODE = dbo.FCD_KOLIPALETFULL.[Ürün Kodu] ON dbo.LG_125_BOMLINE.ITEMREF = LG_125_ITEMS_1.LOGICALREF LEFT OUTER JOIN
                         dbo.LG_125_UNITSETF ON dbo.LG_125_BOMLINE.USREF = dbo.LG_125_UNITSETF.LOGICALREF
WHERE        (dbo.LG_125_ITEMS.CARDTYPE = 12) AND (dbo.LG_125_BOMLINE.LOGICALREF IS NOT NULL) AND (dbo.FCD_KOLI_PALET_ICERIKLERI.[Adet/Koli/Palet] = 1) AND (FCD_KOLI_PALET_ICERIKLERI_1.[Adet/Koli/Palet] = 2) AND 
                         (FCD_KOLI_PALET_ICERIKLERI_2.[Adet/Koli/Palet] = 3) AND (dbo.FCD_KOLIPALETFULL.[Adet/Koli/Palet] = 1) AND (FCD_KOLI_PALET_ICERIKLERI_3.[Adet/Koli/Palet] = 5) AND dbo.LG_125_ITEMS.CODE NOT LIKE '\%'