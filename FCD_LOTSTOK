SELECT        ITM.CODE AS STOK_KODU, ITM.NAME AS STOK_ACIKLAMASI, SLNOP.CODE AS LOT_NO, SLNOP.NAME AS LOT_ACIKLAMASI, SLTR.INVENNO AS DEPO_NO, SLTR.REMAMOUNT AS KALAN_MIKTAR, SLTR.EXPDATE AS SKT, 
                         SLTR.LINEEXP AS LOT_NOTU
FROM            dbo.LG_125_01_SLTRANS AS SLTR WITH (NOLOCK) INNER JOIN
                         dbo.LG_125_ITEMS AS ITM WITH (NOLOCK) ON SLTR.ITEMREF = ITM.LOGICALREF INNER JOIN
                         dbo.LG_125_01_SERILOTN AS SLNOP WITH (NOLOCK) ON SLTR.SLREF = SLNOP.LOGICALREF
WHERE        (SLTR.STATUS = 0) AND (SLTR.CANCELLED = 0) AND (SLTR.REMAMOUNT <> 0) AND (SLTR.IOCODE IN (1, 2)) AND (SLTR.EXIMFCTYPE IN (0, 4, 5, 3, 2, 7))