SELECT  i.CODE AS [Ürün Kodu], 
        i.NAME AS [Ürün Adı], 
        d.WEIGHT AS [Net Ağırlık],
        CASE WHEN ps.CONVFACT2 = 1 THEN NULL ELSE ps.CONVFACT2 END AS [Poşet İçi Miktar],
        k.CONVFACT2 AS [Koli İçi Adet],
        p.CONVFACT2 AS [Palet İçi Adet]

FROM dbo.LG_125_ITEMS i
INNER JOIN dbo.LG_125_ITMUNITA d ON i.LOGICALREF = d.ITEMREF AND d.LINENR = 1
LEFT JOIN dbo.LG_125_ITMUNITA k ON i.LOGICALREF = k.ITEMREF AND k.LINENR = 2
LEFT JOIN dbo.LG_125_ITMUNITA p ON i.LOGICALREF = p.ITEMREF AND p.LINENR = 3
LEFT JOIN dbo.LG_125_ITMUNITA ps ON i.LOGICALREF = ps.ITEMREF AND ps.LINENR = 5
WHERE i.CARDTYPE = 12 AND dbo.LG_125_ITEMS.CODE NOT LIKE '\%'