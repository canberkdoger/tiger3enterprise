SELECT        dbo.LG_125_ITEMS.CODE AS MAMUL_KOD, dbo.LG_125_ITEMS.NAME AS MAMUL_ACIKLAMA, SUM(dbo.LG_125_PRODORD.PLNAMOUNT - dbo.LG_125_PRODORD.ACTAMOUNT) AS URETILECEK_MIKTAR, 
                         dbo.DT_URTVT_DISPLINE.LOGO_BOMCODE AS RECETE_KODU
FROM            dbo.DT_URTVT_DISPLINE LEFT OUTER JOIN
                         dbo.LG_125_PRODORD ON dbo.DT_URTVT_DISPLINE.LOGO_PRODORDREF = dbo.LG_125_PRODORD.LOGICALREF LEFT OUTER JOIN
                         dbo.LG_125_DISPLINE ON dbo.DT_URTVT_DISPLINE.LOGO_DISPLINEREF = dbo.LG_125_DISPLINE.LOGICALREF LEFT OUTER JOIN
                         dbo.LG_125_ITEMS ON dbo.LG_125_DISPLINE.ITEMREF = dbo.LG_125_ITEMS.LOGICALREF
WHERE        (dbo.DT_URTVT_DISPLINE.LOGO_FIRMA = 125) AND (dbo.DT_URTVT_DISPLINE.STATUS IN (0, 1, 2)) AND (dbo.LG_125_PRODORD.PLNAMOUNT - dbo.LG_125_PRODORD.ACTAMOUNT > 0)
GROUP BY dbo.LG_125_ITEMS.CODE, dbo.LG_125_ITEMS.NAME, dbo.DT_URTVT_DISPLINE.LOGO_BOMCODE