SELECT        dbo.LG_125_ITEMS.CODE AS [MALZEME KODU], dbo.LG_125_ITEMS.NAME AS [MALZEME ADI], SUM(dbo.LG_125_PRODORD.PLNAMOUNT) AS [PLANLANAN MİKTAR], SUM(dbo.LG_125_PRODORD.ACTAMOUNT) 
                         AS [ÜRETİLEN MİKTAR], SUM(dbo.LG_125_PRODORD.PLNAMOUNT - dbo.LG_125_PRODORD.ACTAMOUNT) AS [ÜRETİLECEK MİKTAR]
FROM            dbo.LG_125_ITEMS INNER JOIN
                         dbo.LG_125_PRODORD ON dbo.LG_125_ITEMS.LOGICALREF = dbo.LG_125_PRODORD.ITEMREF
WHERE        (dbo.LG_125_PRODORD.STATUS = 0 OR
                         dbo.LG_125_PRODORD.STATUS = 1 OR
                         dbo.LG_125_PRODORD.STATUS = 2) AND (dbo.LG_125_PRODORD.CANCELLED = 0)
GROUP BY dbo.LG_125_ITEMS.CODE, dbo.LG_125_ITEMS.NAME